<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="RemoteTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!--禁用之前的windowBackground预览，解决进入该进程时，存在之前应用主题的窗体画面-->
        <item name="android:windowDisablePreview">true</item>
        <item name="android:windowBackground">@color/col_blank</item>
    </style>


    <style name="MyPopupStyle" parent="Widget.AppCompat.PopupMenu">
        <item name="android:itemBackground">@color/col_white</item>
        <item name="android:textColor">@color/col_blank</item>
    </style>

    <style name="style_bvnc_float_btn_item">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">@dimen/sp_12</item>
    </style>

    <style name="style_bvnc_pop_tv_list_menu">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#000</item>
        <item name="android:textSize">@dimen/sp_12</item>
    </style>

    <style name="style_soft_key_tv">
        <item name="android:gravity">center</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/sel_soft_key_item_bg</item>
        <item name="android:layout_margin">@dimen/dp_4</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="style_soft_key_more">
        <item name="android:gravity">center</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/sel_soft_key_more</item>
        <item name="android:layout_margin">@dimen/dp_4</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="style_btn_all_soft_key">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/col_white</item>
        <item name="android:layout_margin">@dimen/dp_4</item>
        <item name="android:background">@drawable/sel_soft_key_item_bg</item>
        <item name="android:layout_height">match_parent</item>
    </style>


</resources>
